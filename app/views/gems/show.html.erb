<% provide(:title, "Information Gem") %>
<div id='gem_name'>
  <strong>Gem:</strong>
  <%= @ruby_gem.name %>
</div>

<div id='gem_description'>
  <strong>Description:</strong>
  <%= @ruby_gem.info %>
</div>

<p>
  <% if current_user.owns_gem?(@ruby_gem)  %>
    <% if @gem_adoption %>
      <%= button_to 'Remove from adoption', @gem_adoption, method: :delete, data: { confirm: 'Are you sure?' }  %>
    <% else %>
      <%= link_to 'Put for adoption', new_gems_adoption_path(id: @ruby_gem.id), :class => "btn btn-primary" %>
    <% end %>
  <% else %>
    <% if @gem_adoption && @adoption_request.nil? %>
      <%= link_to 'Adopt this gem', new_adoption_request_path(id: @gem_adoption.id), :class => "btn btn-primary" %>
    <% else %>
      You are waiting response about adopt this gem
    <% end %>
  <% end %>
</p>

<p><%= link_to 'Back', gems_path %></p>
