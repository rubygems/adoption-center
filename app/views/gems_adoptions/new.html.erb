<% provide(:title, "Aditional Information") %>
<h1><%= @ruby_gem.name %></h1>
<%= form_for @gems_adoption do |g| %>
  <% if @gems_adoption.errors.any? %>
    <div>
      <p><%= pluralize(@gems_adoption.errors.count, "error") %> Prohibited this gem from being saved:</p>
      <ul>
        <% @gems_adoption.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <%= g.hidden_field :ruby_gem_id %>
  <%= g.label :description, 'Aditional information' %>
  <p><%= g.text_area :description %></p>
  <p><%= g.submit "Confirm" %></p>
<% end %>
